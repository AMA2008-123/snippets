---
const languages = [
      { name: 'All', class: 'other' },
      { name: 'Python', class: 'py' },
      { name: 'Javascript', class: 'js' },
      { name: 'C++', class: 'cpp' },
      { name: 'Java', class: 'java' },
]
---

<div id="languages" class="flex gap-2 pb-6 overflow-x-scroll">
  {
    languages.map((category) => (
      <button
        class={`block text-sm px-4 py-2 rounded-lg whitespace-nowrap transition-all category ${
          category.class
        } ${category.class == 'other' ? 'active-button' : 'inactive-button'}`}
      >
        {category.name}
      </button>
    ))
  }
</div>

